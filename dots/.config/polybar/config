[colors]
  include-file = ~/.config/polybar/colors

[bars]
  include-file = ~/.config/polybar/bars

[module/i3]
  include-file = ~/.config/polybar/i3

[module/song]
  type = custom/script
  exec = /usr/bin/curl -s localhost:8888/getInfo | /usr/bin/grep -v youtube | sed 's/\t/  /'

[module/xkeyboard]
  type = internal/xkeyboard

  ; List of indicators to ignore
  blacklist-0 = num lock
  blacklist-1 = scroll lock

[module/network]
  type = internal/network
  interface = ${env:NETWORK_IFACE:wlp3s0}
  interval = 3.0

  ; Left click opens speedtest.net if device is up
  format-connected = %{A1:chromium 'speedtest.net':} <label-connected> %{A}
  label-connected = %local_ip%

  ; Left click opens wicd if device is down
  format-disconnected = %{A1:wicd-gtk:} <label-disconnected> %{A}
  label-disconnected = %ifname% disconnected
  label-disconnected-foreground = ${colors.alert}

[module/date]
  type = internal/date
  interval = 5

  date = %d %b
  time = %H:%M%

  label = %date% %time%
  format = %{A1:chromium 'calendar.google.com':} <label> %{A}

[module/pulseaudio]
  type = internal/pulseaudio
  use-ui-max = true

  click-right =
  click-middle = pavucontrol

  format-volume = <bar-volume>
  format-muted-foreground = ${colors.black}
  label-muted = sound muted

  bar-volume-width = 20
  bar-volume-gradient = false

  bar-volume-fill = ━
  bar-volume-fill-font = 0
  bar-volume-fill-foreground = ${colors.black}

  bar-volume-indicator = ━
  bar-volume-indicator-font = 0
  bar-volume-indicator-foreground = ${colors.light-gray}

  bar-volume-empty = ━
  bar-volume-empty-font = 0
  bar-volume-empty-foreground = ${colors.light-gray}

[module/battery]
  type = internal/battery
  battery = BAT0
  adapter = AC
  full-at = 99

  label-charging =  %percentage%
  label-discharging =  %percentage%
  label-full =  full

[settings]
  screenchange-reload = true

[global/wm]
  margin-bottom = 0

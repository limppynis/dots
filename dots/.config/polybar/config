[colors]
  include-file = ~/.config/polybar/colors

[bar/default]
  include-file = ~/.config/polybar/bar
  monitor = ${env:SCREEN_NAME:HDMI-0}
  width = ${env:POLYBAR_WIDTH:100%}
  override-redirect = true
  offset-x = 40
  offset-y = 0

[module/song]
  type = custom/script
  exec = /usr/bin/curl -s localhost:8888/getInfo | /usr/bin/grep -v youtube | sed 's/\t/  /'

[module/xkeyboard]
  type = internal/xkeyboard

  ; List of indicators to ignore
  blacklist-0 = num lock
  blacklist-1 = scroll lock

[module/i3]
  include-file = ~/.config/polybar/i3

[module/network]
  type = internal/network
  interface = ${env:NETWORK_IFACE:wlp3s0}
  interval = 3.0

  ; Left click opens speedtest.net if device is up
  format-connected = %{A1:chromium 'speedtest.net':} <label-connected> %{A}
  label-connected = %local_ip%

  ; Left click opens wicd if device is down
  format-disconnected = %{A1:wicd-gtk:} <label-disconnected> %{A}
  label-disconnected = %ifname% disconnected
  label-disconnected-foreground = ${colors.alert}

[module/date]
  type = internal/date
  interval = 5

  date = %d %b
  time = %H:%M%

  label = %date% %time%
  format = %{A1:chromium 'calendar.google.com':} <label> %{A}

[module/pulseaudio]
  type = internal/pulseaudio
  use-ui-max = true

  format-volume = %{A1:pavucontrol:} <bar-volume> %{A}
  format-muted-foreground = ${colors.gray}
  label-muted = sound muted

  bar-volume-width = 15
  bar-volume-foreground-0 = ${colors.accent}
  bar-volume-foreground-1 = ${colors.accent}
  bar-volume-foreground-2 = ${colors.accent}
  bar-volume-foreground-3 = ${colors.accent}
  bar-volume-foreground-4 = ${colors.accent}
  bar-volume-foreground-5 = ${colors.accent}
  bar-volume-foreground-6 = ${colors.alert}
  bar-volume-gradient = false
  bar-volume-indicator = ━
  bar-volume-fill = ━
  bar-volume-empty = ━
  bar-volume-empty-foreground = ${colors.gray}


[module/battery]
  type = internal/battery
  battery = BAT0
  adapter = AC
  full-at = 99

  label-charging =  %percentage%
  label-discharging =  %percentage%
  label-full =  full

[settings]
  screenchange-reload = true

[global/wm]
  margin-bottom = 0
